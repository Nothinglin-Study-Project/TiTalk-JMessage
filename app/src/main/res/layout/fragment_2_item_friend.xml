<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <com.wzm.tasking.view.CircleImageView
        android:id="@+id/img_user_list_item"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center" />


    <TextView
        android:id="@+id/tv_user_list_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15sp"
        android:layout_weight="1"
        android:textColor="@color/colorGray_3"
        android:textSize="16sp" />
    <ImageView
        android:id="@+id/img_user_list_item_1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15sp" />
    <ImageView
        android:id="@+id/img_user_list_item_2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15sp" />

</LinearLayout>
